{% extends 'base.html.twig' %}

{% block title %}Slowly{% endblock %}
{% block headline %}Fehlende Briefmarken{% endblock %}

{% block body %}
    <div class="row">
        {% for identifier,stamp in stamps %}
            <div class="col-4 d-flex">
                <div class="d-flex">
                    <div><img src="{{ stamp.img }}" width="100" height="100" alt="{{ identifier }}"/></div>
                    <div class="py-2">
                        <div>{{ stamp.name }}</div>
                        <div><a href="{{ path('app_slowly_add', {'name': identifier}) }}">add</a></div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}