{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block headline %}Profil{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <form action="{{ path('app_user_change_username', {'user': app.user.id}) }}" method="post">
            <h4 class="py-3">Nickname ändern:</h4>
            <div class="input-group overflow-hidden my-3">
                <label for="username"></label><span class="input-group-text">Nickname:</span>
                <input type="text" class="form-control" id="username" name="_username" aria-describedby="search" value="{{ app.user.username }}" min="5">
            </div>
            <div>
                <button class="input-group btn" type="submit">Ändern</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center py-5">
        <form action="{{ path('app_user_change_password', {'user': app.user.id}) }}" method="post">
            <h4 class="pt-3">Passwort ändern:</h4>
            <span>(Minimum 5 Zeichen)</span>
            <div class="input-group overflow-hidden my-3">
                <label for="password1"></label><span class="input-group-text">Password:</span>
                <input type="password" class="form-control" id="password1" name="_password1" aria-describedby="search" value="">
            </div>
            <div class="input-group overflow-hidden my-3">
                <label for="password2"></label><span class="input-group-text">Bestätigung:</span>
                <input type="password" class="form-control" id="password2" name="_password2" aria-describedby="search" value="">
            </div>
            <div>
                <button id="submitPassword" class="input-group btn" type="submit" disabled>Ändern</button>
            </div>
        </form>
    </div>
    <div class="text-center">
        <div class="d-flex justify-content-center">
            <div class="mt-2"><a class="input-group btn px-5" href="{{ path('app_logout') }}">logout</a></div>
        </div>
    </div>
{% endblock %}
