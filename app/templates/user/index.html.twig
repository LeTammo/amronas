{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.shortRoles|join(', ')|lower : '' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td class="text-end">
                    <a class="btn btn-small" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-small" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    <a class="btn btn-small" href="{{ path('app_user_takeover', {'id': user.id}) }}">takeover</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_user_new') }}">Create new user</a>
{% endblock %}
