{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block headline %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="d-flex justify-content-center">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Passwort'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: "ich bin kein Bot"}) }}
        {{ form_errors(registrationForm) }}
        {{ form_errors(registrationForm.username) }}
        {{ form_errors(registrationForm.email) }}
        {{ form_errors(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.agreeTerms) }}
        <button type="submit" class="input-group btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
