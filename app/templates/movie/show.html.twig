{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie.name }}</td>
            </tr>
            <tr>
                <th>ImdbId</th>
                <td>{{ movie.imdbId }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ movie.genre }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ movie.year }}</td>
            </tr>
            <tr>
                <th>TrailerYoutubeId</th>
                <td>{{ movie.trailerYoutubeId }}</td>
            </tr>
            <tr>
                <th>StreamProvider</th>
                <td>{{ movie.streamProvider ? movie.streamProvider|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>TimeAdded</th>
                <td>{{ movie.timeAdded ? movie.timeAdded|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TimeWatched</th>
                <td>{{ movie.timeWatched ? movie.timeWatched|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PosterUrl</th>
                <td>{{ movie.posterUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_index') }}">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
