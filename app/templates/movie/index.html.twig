{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ImdbId</th>
                <th>Genre</th>
                <th>Year</th>
                <th>TrailerYoutubeId</th>
                <th>StreamProvider</th>
                <th>TimeAdded</th>
                <th>TimeWatched</th>
                <th>PosterUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.name }}</td>
                <td>{{ movie.imdbId }}</td>
                <td>{{ movie.genre }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.trailerYoutubeId }}</td>
                <td>{{ movie.streamProvider ? movie.streamProvider|join(', ') : '' }}</td>
                <td>{{ movie.timeAdded ? movie.timeAdded|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ movie.timeWatched ? movie.timeWatched|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ movie.posterUrl }}</td>
                <td>
                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movie_new') }}">Create new</a>
{% endblock %}
